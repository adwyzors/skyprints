{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend (NestJS)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug",
        "--workspace",
        "apps/backend"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Frontend (Next.js)",
      "type": "node",
  "request": "launch",
  "cwd": "${workspaceFolder}/apps/frontend",
  "runtimeExecutable": "node",
  "runtimeArgs": [
    "--inspect-brk=9230",
    "${workspaceFolder}/node_modules/next/dist/bin/next",
    "dev"
  ],
  "console": "integratedTerminal",
  "skipFiles": ["<node_internals>/**"]
    }
  ]
}
