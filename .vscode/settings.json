{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "files.eol": "\n",

  "prettier.requireConfig": true
}
