{
    "name": "factory-process-app",
    "private": true,
    "workspaces": [
        "apps/*",
        "apps/packages/*"
    ],
    "engines": {
        "node": ">=20 <21"
    },
    "scripts": {
        "build:contracts": "npm --workspace apps/packages/contracts run build",
        "build:backend": "npm --workspace apps/backend run build",
        "build:frontend": "npm --workspace apps/frontend run build",
        "build": "npm run build:contracts && npm run build:backend && npm run build:frontend",
        "dev:backend": "npm --workspace apps/backend run dev",
        "dev:frontend": "npm --workspace apps/frontend run dev",
    },
    "devDependencies": {
        "prisma": "6.19.2",
        "typescript": "^5.9.3"
    }
}