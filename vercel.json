{
    "version": 2,
    "builds": [
        {
            "src": "apps/backend/api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/backend/dist/**",
                    "apps/packages/contracts/dist/**",
                    "node_modules/.prisma/**",
                    "tsconfig.base.json",
                    "apps/backend/tsconfig.json"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/apps/backend/api/index.ts"
        }
    ],
    "installCommand": "npm install",
    "buildCommand": "npm run build:contracts && npm --workspace apps/backend run build"
}