{
    "version": 2,
    "builds": [
        {
            "src": "apps/backend/api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/backend/dist/**",
                    "apps/packages/contracts/dist/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/apps/backend/api/index.ts"
        }
    ],
    "installCommand": "npm install && npm run build:contracts && cd apps/backend && npx prisma generate"
}